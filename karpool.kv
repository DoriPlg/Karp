#:kivy 1.0.9

<MainScreen>:
    canvas:
        Color: 
            rgba:0.81,0.94,0.96,1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Button:
        text:"Hello World"
        font_size:14
        on_press: root.openmenu()

<Menu>:
    canvas:
        Color: 
            rgba:0.0,0.94,0.96,1

    BoxLayout:
        width: root.width
        x: 0
        top: root.top - 5 
        orientation: 'vertical'
        padding: [0,10,0,10] 
        Label:
            text: 'this on top'
            font_size: root.height / 10
        Label:
            text: 'middle'
            font_size: root.height / 10
        Label:
            text: 'this on bottom'  
            font_size: root.height / 10
        